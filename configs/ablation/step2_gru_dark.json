{
  "run": {
    "name": "ablation_step2_gru_dark_optimized"
  },
  "data": {
    "cnn_path": "data/cnn_features_pca.csv",
    "morph_path": "data/morph_features.csv",
    "target_path": "data/result.csv"
  },
  "model": {
    "type": "gru",
    "fusion_type": "concat",
    "use_morph": true,
    "use_cnn": true,
    "rnn_hidden": 32,
    "rnn_layers": 1,
    "hidden_dim": 32,
    "attn_dim": 32,
    "dropout": 0.0,
    "time_features": "absolute+delta"
  },
  "train": {
    "target_condition": "Dark",
    "window_size": 4,
    "batch_size": 16,
    "epochs": 300,
    "lr": 0.01,
    "weight_decay": 0.0001,
    "grad_clip": 1.0,
    "patience": 25,
    "use_scheduler": true,
    "scheduler_factor": 0.5,
    "scheduler_patience": 5,
    "min_lr": 1e-6
  },
  "eval": {
    "mc_test_runs": 20,
    "mc_test_base_seed": 42
  }
}