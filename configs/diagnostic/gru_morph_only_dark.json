{
  "run": {
    "name": "diagnostic_gru_morph_only_dark"
  },
  "data": {
    "cnn_path": "data/cnn_features_pca.csv",
    "morph_path": "data/morph_features.csv",
    "target_path": "data/result.csv"
  },
  "model": {
    "type": "gru",
    "fusion_type": "concat",
    "use_morph": true,
    "use_cnn": false,
    "time_features": "none",
    "rnn_hidden": 128,
    "rnn_layers": 1,
    "attn_dim": 64,
    "attn_heads": 4,
    "dropout": 0.0
  },
  "train": {
    "target_condition": "Dark",
    "window_size": 4,
    "batch_size": 8,
    "epochs": 200,
    "lr": 0.001,
    "weight_decay": 0.0001,
    "grad_clip": 1.0,
    "patience": 20,
    "use_scheduler": true,
    "scheduler_factor": 0.5,
    "scheduler_patience": 5,
    "min_lr": 1e-6
  },
  "eval": {
    "mc_test_runs": 20,
    "mc_test_base_seed": 42
  }
}
